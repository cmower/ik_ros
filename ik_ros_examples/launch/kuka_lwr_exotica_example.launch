<launch>

  <!-- Generate target motion -->
  <!-- ====================== -->

  <!-- Figure of eight motion -->
  <node pkg="ik_ros_examples" name="figure_eight_motion" type="figure_eight_node.py"/>

  <!-- Connect figure of eight motion to world -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="motion_base_in_world"
	args="-0. 0 0.65 0 1.57 3.141 rpbi/world figure_eight_base"/>

  <!-- IK -->
  <!-- == -->

  <!-- Setup IK -->
  <node pkg="ik_ros" name="ik_setup" type="exotica_set_problem_node.py" output="screen">
    <param name="start_on_init" type="bool" value="true"/>
  </node>

  <!-- IK solver interface -->
  <node pkg="ik_ros" name="ik_node" type="ik_node.py" args="EXOTicaInterface" output="screen">
    <param name="start_callback_on_init" type="bool" value="true"/>
  </node>

  <!-- Simulation -->
  <!-- ========== -->

  <!-- ROS-Pybullet interface node simulator -->
  <node pkg="ros_pybullet_interface" name="ros_pybullet_interface_node" type="ros_pybullet_interface_node.py">
    <rosparam param="config" file="$(find ik_ros_examples)/configs/kuka_lwr_exotica_example/config.yaml"/>
  </node>

  <!-- Visualization -->
  <node type="rviz" name="rviz" pkg="rviz" args="-d $(find ik_ros_examples)/rviz/kuka_lwr_trac_ik_example.rviz" />

</launch>
